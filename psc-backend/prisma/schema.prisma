enum FeedbackStatus {
  PENDING
  IN_PROCESS
  COMPLETED
}

model Feedback {
  id            Int            @id @default(autoincrement())
  memberNo      String
  member        Member         @relation(fields: [memberNo], references: [Membership_No])
  categoryId    Int?
  category      FeedbackCategory? @relation(fields: [categoryId], references: [id])
  subCategoryId    Int?
  subCategory      FeedbackSubCategory? @relation(fields: [subCategoryId], references: [id])
  otherSubCategory String?
  subject          String
  message       String         @db.Text
  status        FeedbackStatus @default(PENDING)
  remarks       FeedbackRemark[]

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([memberNo])
  @@index([categoryId])
  @@index([subCategoryId])
}

model FeedbackCategory {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  feedbacks Feedback[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model FeedbackSubCategory {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  feedbacks Feedback[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model FeedbackRemark {
  id         Int      @id @default(autoincrement())
  feedbackId Int
  feedback   Feedback @relation(fields: [feedbackId], references: [id], onDelete: Cascade)
  adminName  String
  remark     String   @db.Text

  createdAt  DateTime @default(now())

  @@index([feedbackId])
}

model PhotoshootCancellationRequest {
  id        Int      @id @default(autoincrement())
  bookingId Int
  booking   PhotoshootBooking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  reason    String?  @db.Text
  requestedBy String?  @db.Text
  status    RequestStatus @default(PENDING)
  adminRemarks String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([bookingId])
  @@index([status])
}
