// sports
enum ChargeType {
  PER_DAY
  PER_MONTH
  PER_GAME
  PER_HOUR
}

model Sport {
  id          Int     @unique @default(autoincrement())
  activity    String  @db.VarChar(100)
  description String? @db.VarChar(300)
  isActive    Boolean @default(true)
  images      Json    @default("[]") // Array of image URLs, max 5

