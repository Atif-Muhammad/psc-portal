model ClubRule {
  id        Int      @id @default(autoincrement())
  content   String   @db.LongText // Rich text content

  type      String   @default("CLUB") // CLUB, ROOM, HALL, LAWN, PHOTOSHOOT
  isActive  Boolean  @default(true)

  createdBy String @default("")
  updatedBy String @default("")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// MESSING MODULE

model MessingCategory {
  id        Int      @id @unique @default(autoincrement())
  category  String   @db.VarChar(200)
  images    Json     @default("[]") // Array of image URLs, max 5
  
  subCategories MessingSubCategory[]

  createdBy String @default("")
  updatedBy String @default("")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MessingSubCategory {
  id                Int             @id @unique @default(autoincrement())
  messingCategoryId Int
  messingCategory   MessingCategory @relation(fields: [messingCategoryId], references: [id], onDelete: Cascade)
  
  name        String  @db.VarChar(200)
  
  items       MessingItem[]

  createdBy String @default("")
  updatedBy String @default("")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([messingCategoryId])
}

model MessingItem {
  id                   Int                @id @unique @default(autoincrement())
  messingSubCategoryId Int
  messingSubCategory   MessingSubCategory @relation(fields: [messingSubCategoryId], references: [id], onDelete: Cascade)
  
  name        String  @db.VarChar(200)
  description String? @db.Text
  price       Decimal @default(0.00) @db.Decimal(30, 2)
  
  createdBy String @default("")
  updatedBy String @default("")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([messingSubCategoryId])
}

